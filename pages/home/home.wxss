/* home.wxss */
page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
  background-color: #f5f5f5;
  min-height: 100vh; /* Ensures the container takes at least full viewport height */
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #4a7cbe;
  text-align: center;
}
.swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: 50rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.theme {
  text-align: center;
  margin: 100rpx 0;
}


.theme-description {
  font-size: 30rpx;
  color: rgb(58, 58, 58);
}

.content {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
}

.nav-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  font-size: 30rpx;
  background-color: #ffffff;
  color: #4a7cbe;
  border: 1rpx solid #4a7cbe;
  border-radius: 10rpx;
  text-decoration: none;
  width: 80%;
  text-align: center;
  transition: background-color 0.3s, color 0.3s;
}

.nav-item:hover {
  background-color: #4a7cbe;
  color: #ffffff;
}

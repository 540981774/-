/* videos.wxss */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  min-height: 100vh;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  color: #8FBCFF;
  text-align: center;
}

.video {
  width: 100%;
  max-width: 800rpx;
  height: 400rpx;
  border: 2rpx solid #8FBCFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.video-info {
  text-align: left;
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 20rpx;
  height: 400rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rp;

}

.video-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.video-list {
  width: 100%;
  max-width: 600rpx;
  height: 500rpx;
}

.video-item {
  padding: 15rpx;
  background-color: #ffffff;
  border: 1rpx solid #8FBCFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  cursor: pointer;
}

.video-item-title {
  font-size: 30rpx;
  color: #333;
}

.video-item:hover {
  background-color: #8FBCFF;
  color: #ffffff;
}

/* cases.wxss */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  min-height: 100vh;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #8FBCFF;
  text-align: center;
}

.case-list {
  width: 100%;
  max-width: 700rpx;
}

.case-item {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border: 1rpx solid #8FBCFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.case-image {
  width: 100%;
  height: 600rpx;
  object-fit: cover;
}

.case-content {
  padding: 10rpx;
}

.case-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.case-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
